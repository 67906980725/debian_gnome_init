{
    "workbench.colorTheme": "Default Light Modern",
    "editor.fontFamily": "JetBrainsMono, 'JetBrainsMono Nerd Font Mono', 'Source Code Pro', 'SourceCodePro Nerd Font Mono', 'Microsoft YaHei', 'Source Han Sans CN', monospace",
    "editor.fontWeight": "normal",
    "editor.wordWrap": "on",
    "editor.fontLigatures": true,
    "editor.indentSize": 2,
    "editor.tabSize": 2,

    // "terminal.external.linuxExec": "kgx",
    "terminal.external.linuxExec": "gnome-terminal",
    "terminal.integrated.defaultProfile.linux": "zsh",

    "markdown.copyFiles.destination": {
      "**/*.md": ".assets/${documentBaseName}/${fileName}",
    },
    "markdown-preview-enhanced.automaticallyShowPreviewOfMarkdownBeingEdited": true,

    "vim.handleKeys": {
      "<C-d>": true,
      "<C-s>": false,
      "<C-z>": false,

      "<C-j>": false,
      "<C-b>": false,
      "<C-f>": false,
    },
  }