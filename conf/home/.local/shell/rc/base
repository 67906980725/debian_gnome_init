# ls
alias ls="exa --color=auto --icons"
alias la="ls -a"
alias l="ls -l"
alias lla="ls -al"
alias lt="ls --tree"

alias grep="grep --color=auto"

# trash-cli
alias rm="trash" 

# neovim
export EDITOR="nvim" 
alias v="nvim"
